/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  background: #f4f4f4;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.Title{
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.xc_section{
  padding: 0 25rpx 25rpx 25rpx;
  font-size: 26rpx;
  margin-top:20rpx;
}
.section_info{
  border: 1px solid #fff;
  background: #fff;
  padding: 20rpx;
}
.xc{
  border: 1px solid #fff;
  background: #fff;
}
.section_info text{
  display: block;
  line-height: 40rpx;
}
.hello{
  text-indent: 2em;
  margin: 10rpx 0;
}
.xc .none{
  border-bottom: none;
}
.input-content {
  display:flex;
  flex-flow:row;
  align-items:center;
  border-bottom:1px solid #efefef;
  line-height:80rpx;
}
.input-content>text {
  width:240rpx;
  color:#999;
  white-space:nowrap;
}
.input-content input {
  width:100%;
  text-align:right; 
}

.input-content picker {
  width:100%;
}
.input-content .picker {
  width:100%;
  border:none;
  height:100%;
  padding:none;
  line-height:1;
  margin-bottom:0;
  float:right;
  text-align:right;
  color: #333;
}

.label-2{
    margin-bottom: 5px;
}
.label-2__text {
    display: inline-block;
    vertical-align: middle;
}
.label-2__icon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8px;
    width: 12px;
    height: 12px;
    background: #ccc;
    border-radius: 50px;
}
.label-2__icon-checked {
    position: absolute;
    left: 2px;
    top: 2px;
    width: 8px;
    height: 8px;
    background: #000;
    border-radius: 50%;
}
.radio-group .radio{
  margin-right:15rpx;
}
radio .wx-radio-input{
width: 30rpx;
height: 30rpx;
}
.sec{
  padding: 20rpx;
}
.textarea-wrp textarea{
  height: 180rpx !important;
  border-radius: 4px;
  padding:15rpx 25rpx;
  box-sizing: border-box;
  margin:15px 0 10rpx 0; 
  width: 100%;
  border: 1rpx solid #f4f4f4;
}
.sure{
  color: #fff;
  margin-top: 20px;
}
.toggle_container{
  display: flex;
  flex-direction: row;
  flex-flow: row;
}
.toggle_container .radio-group{
  width: 50%;
}
.panelShow{
  width: 100%;
  display: inline-block;
  text-align: right;
  flex-direction: row;
  white-space: nowrap;
  line-height: 40rpx;
}
.panelShow.panelHide::after{
   border-top: 8rpx solid transparent;
  border-bottom:8px solid #333;
  margin-left: 5px;
  position: relative;
  top: -2rpx;
}
.panelShow::after{
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border-top: 8px solid #333;
  border-bottom:8rpx solid transparent;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  margin-left: 5px;
  position: relative;
  top: 6rpx;
}